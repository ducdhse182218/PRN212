<Window x:Class="ResearchProjectManagement_SE182218.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProjectManagement_SE182218"
        mc:Ignorable="d"
        Title="DetailWindow" Height="400" Width="500" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Top" Margin="0,0,0,20">
            <!-- ProjectId -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Project ID:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C"/>
                <TextBox x:Name="ProjectIdTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- ProjectTitle -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Project Title:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C"/>
                <TextBox x:Name="ProjectTitleTextBox" Width="280" Height="20" Background="#FFFFF8EB" />
            </StackPanel>

            <!-- ResearchField -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Research Field:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C"/>
                <TextBox x:Name="ResearchFieldTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- StartDate -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Start Date:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C"/>
                <DatePicker x:Name="StartDatePicker" Width="280"/>
            </StackPanel>

            <!-- EndDate -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="End Date:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C"/>
                <DatePicker x:Name="EndDatePicker" Width="280"/>
            </StackPanel>
            
            <!-- Budget -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Budget:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C"/>
                <TextBox x:Name="BudgetTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>


            <!-- LeadResearcherId -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Lead Researcher:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF6B705C"/>
                <ComboBox x:Name="LeadResearcherComboBox"
          Width="280"
          Height="22"
          Background="#FFFFF8EB"
          DisplayMemberPath="FullName" ></ComboBox>

            </StackPanel>


        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Save" Width="80" Margin="0,0,10,0" Padding="5"
                Background="#FFB38B82" Foreground="White" FontFamily="Arial" FontSize="12"
                Click="SaveButton_Click"/>
            <Button Content="Close" Width="80" Padding="5"
                Background="#FFB38B82" Foreground="White" FontFamily="Arial" FontSize="12"
                Click="CloseButton_Click"/>
        </StackPanel>
    </Grid> 
</Window>
