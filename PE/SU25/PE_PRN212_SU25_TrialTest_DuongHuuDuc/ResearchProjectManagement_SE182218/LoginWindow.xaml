<Window x:Class="ResearchProjectManagement_SE182218.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProjectManagement_SE182218"
        mc:Ignorable="d"
        Title="Login Window SU 2025" Height="400" Width="700" 
        Background="#FFF5F5DC" WindowStartupLocation    ="CenterScreen" 
        FontFamily="Tahoma" FontSize="26">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Center" Foreground="Black" VerticalAlignment="Top" FontSize="40" FontWeight="Bold" Margin="0,27,0,0"/>

        <Label Content="Email: " HorizontalAlignment="Left" Foreground="#FF6B705C" FontSize="24" Margin="76,91,0,233"/>
        <TextBox x:Name="EmailAddressTextBox" HorizontalAlignment="Left" Height="32" Margin="207,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="398" FontSize="32" Foreground="Black" TabIndex="0"/>

        <Label Content="Password: " HorizontalAlignment="Left" Foreground="#FF6B705C" FontSize="24" Margin="76,156,0,131"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="32" Margin="207,160,0,0" VerticalAlignment="Top" Width="398" FontSize="32" TabIndex="1" />

        <Button x:Name="LoginButton" Content="Login" Padding="10" HorizontalAlignment="Center" Margin="0,221,0,0" VerticalAlignment="Top" FontSize="24"
        RenderTransformOrigin="2.045,0.366" Height="63" Width="150" Click="LoginButton_Click" Background="#FFB38B82" Foreground="White"/>
    </Grid>
</Window>