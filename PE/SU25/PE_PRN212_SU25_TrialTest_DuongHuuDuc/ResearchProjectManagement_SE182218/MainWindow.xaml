<Window x:Class="ResearchProjectManagement_SE182218.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProjectManagement_SE182218"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="700" 
        Background="#FFF5F5DC" WindowStartupLocation="CenterScreen" 
        FontFamily="Tahoma" FontSize="26" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="AddButton" Content="Create" HorizontalAlignment="Left" Height="21" Margin="442,21,0,0" VerticalAlignment="Top" Width="74" TabIndex="3" FontSize="15" Background="#FFB38B82" Foreground="White" Click="AddButton_Click"/>
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Height="21" Margin="521,21,0,0" VerticalAlignment="Top" Width="84" TabIndex="4" FontSize="15" Background="#FFB38B82" Foreground="White" Click="UpdateButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Height="21" Margin="610,21,0,0" VerticalAlignment="Top" Width="80" TabIndex="5" FontSize="15" Background="#FFB38B82" Foreground="White" Click="DeleteButton_Click"/>

        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Height="21" Margin="350,0,0,342" VerticalAlignment="Bottom" Width="84" TabIndex="6" FontSize="15" Background="#FFB38B82" Foreground="White" Click="SearchButton_Click"/>
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" Height="32" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="335" TabIndex="0" RenderTransformOrigin="0.244,0.779" Foreground="#FFFFF8EB"/>

        <DataGrid x:Name="ResearchDataGrid" HorizontalAlignment="Left" Height="312" Margin="15,62,0,0" VerticalAlignment="Top" Width="675" AutoGenerateColumns="False" TabIndex="7" FontSize="13">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProjectID" Binding="{Binding ProjectId}" Width="50"/>
                <DataGridTextColumn Header="ProjectTitle" Binding="{Binding ProjectTitle}" Width="*"/>
                <DataGridTextColumn Header="ResearchField" Binding="{Binding ResearchField}" Width="*"/>
                <DataGridTextColumn Header="StartDate" Binding="{Binding StartDate}" Width="*"/>
                <DataGridTextColumn Header="EndDate" Binding="{Binding EndDate}" Width="*"/>
                <DataGridTextColumn Header="Budget" Binding="{Binding Budget}" Width="*"/>
                <DataGridTextColumn Header="LeadResearcherID" Binding="{Binding LeadResearcherId}" Width="*"/>
                <DataGridTextColumn Header="FullName" Binding="{Binding LeadResearcher.FullName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>