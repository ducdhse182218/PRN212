<Window x:Class="ResearchProjectManagement_SE181867.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Window SU 2025"
        Height="400" Width="700"
        FontFamily="Tahoma"
        FontSize="26"
        Background="#FFF5F5DC"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Border Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Username Row -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Label Content="Email:"
                           Width="120"
                           FontFamily="Arial"
                           FontSize="24"
                           Foreground="#FF6B705C"
                           VerticalAlignment="Center"/>
                    <TextBox x:Name="EmailTextBox" Width="250"
                             Height="32"
                             FontSize="18"
                             Background="#FFFFF8EB"/>
                </StackPanel>

                <!-- Password Row -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Label Content="Password:"
                           Width="120"
                           FontFamily="Arial"
                           FontSize="24"
                           Foreground="#FF6B705C"
                           VerticalAlignment="Center"/>
                    <TextBox x:Name="PasswordTextBox" Width="250"
                                 Height="32"
                                 FontSize="18"
                                 Background="#FFFFF8EB"/>
                </StackPanel>

                <!-- Login Button -->
                <Button x:Name="btnLogin" Content="Login"
                        Width="150"
                        Padding="10"
                        Margin="0,20,0,0"
                        FontSize="20"
                        Background="#FFB38B82"
                        HorizontalAlignment="Center" Click="btnLogin_Click_1"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
