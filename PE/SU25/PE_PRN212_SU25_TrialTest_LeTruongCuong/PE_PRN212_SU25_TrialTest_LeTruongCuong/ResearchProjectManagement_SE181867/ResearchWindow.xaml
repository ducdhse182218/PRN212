<Window x:Class="ResearchProjectManagement_SE181867.ResearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Research Project Management - SU 2025"
        Height="500" Width="800"
        FontFamily="Tahoma"
        FontSize="13"
        Background="#FFF5F5DC"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Controls: Add, Update, Delete, Search -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">

            <!-- Buttons -->
            <Button x:Name="AddButton" Content="Add"
                    Width="80"
                    Margin="0,0,10,0"
                    Padding="5"
                    Background="#FFB38B82"
                    Foreground="White"
                    FontFamily="Arial"
                    FontSize="12" Click="AddButton_Click"/>

            <Button x:Name="UpdateButton" Content="Update"
                    Width="80"
                    Margin="0,0,10,0"
                    Padding="5"
                    Background="#FFB38B82"
                    Foreground="White"
                    FontFamily="Arial"
                    FontSize="12" Click="UpdateButton_Click"/>

            <Button x:Name="DeleteButton" Content="Delete"
                    Width="80"
                    Margin="0,0,10,0"
                    Padding="5"
                    Background="#FFB38B82"
                    Foreground="White"
                    FontFamily="Arial"
                    FontSize="12" Click="DeleteButton_Click"/>

            <!-- Spacer -->
            <StackPanel Width="40"/>

            <!-- Search Label -->
            <Label Content="Search:"
                   VerticalAlignment="Center"
                   FontFamily="Arial"
                   FontSize="14"
                   Foreground="#FF6B705C"/>

            <!-- Search Box -->
            <TextBox x:Name="SearchTextBox"
                     Width="200"
                     Height="14"
                     Margin="5,0,5,0"
                     Background="#FFFFF8EB"
                     FontFamily="Tahoma"
                     FontSize="13"/>

            <!-- Search Button -->
            <Button Content="Search"
                    Width="80"
                    Padding="5"
                    Background="#FFB38B82"
                    Foreground="White"
                    FontFamily="Arial"
                    FontSize="12" Click="SearchButton_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="ResearchDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  FontFamily="Tahoma"
                  FontSize="13"
                  Background="White"
                  RowBackground="WhiteSmoke"
                  AlternatingRowBackground="#FFF5F5DC">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding ProjectId}" Width="50"/>
                <DataGridTextColumn Header="Title" Binding="{Binding ProjectTitle}" Width="*"/>
                <DataGridTextColumn Header="Field" Binding="{Binding ResearchField}" Width="*"/>
                <DataGridTextColumn Header="StartDate" Binding="{Binding StartDate}" Width="*"/>
                <DataGridTextColumn Header="EndDate" Binding="{Binding EndDate}" Width="*"/>
                <DataGridTextColumn Header="Budget" Binding="{Binding Budget}" Width="*"/>
                <DataGridTextColumn Header="LeadResearcherId" Binding="{Binding LeadResearcherId}" Width="*"/>
                <DataGridTextColumn Header="FullName" Binding="{Binding LeadResearcher.FullName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
