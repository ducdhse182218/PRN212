<Window x:Class="JLPTMockTestManagement_SE182218.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JLPTMockTestManagement_SE182218"
        mc:Ignorable="d"
        Title="JLPT Mock Test Management - SU 2025" Height="500" Width="800"
        FontFamily="Arial" FontSize="12" Background="#FFBAE6FD" 
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Controls: Add, Update, Delete, Search -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">

            <!-- Buttons -->
            <Button x:Name="AddButton" Content="Add"
                Width="80"
                Margin="0,0,10,0"
                Padding="5"
                Background="#FF06B6D4"
                Foreground="White"
                FontFamily="Arial"
                FontSize="12" Click="AddButton_Click"/>

            <Button x:Name="UpdateButton" Content="Update"
                Width="80"
                Margin="0,0,10,0"
                Padding="5"
                Background="#FF06B6D4"
                Foreground="White"
                FontFamily="Arial"
                FontSize="12" Click="UpdateButton_Click"/>

            <Button x:Name="DeleteButton" Content="Delete"
                Width="80"
                Margin="0,0,10,0"
                Padding="5"
                Background="#FF06B6D4"
                Foreground="White"
                FontFamily="Arial"
                FontSize="12" Click="DeleteButton_Click"/>

            <!-- Spacer -->
            <StackPanel Width="40"/>

            <!-- Search Label -->
            <Label Content="Search:"
               VerticalAlignment="Center"
               FontFamily="Arial"
               FontSize="14"
               Foreground="#FF1E3A8A"/>

            <!-- Search Box -->
            <TextBox x:Name="SearchTextBox"
                 Width="200"
                 Height="16"
                 Margin="5,0,5,0"
                 Background="#FFF0F9FF"
                 FontFamily="Tahoma"
                 FontSize="13"/>

            <!-- Search Button -->
            <Button Content="Search"
                Width="80"
                Padding="5"
                Background="#FF06B6D4"
                Foreground="White"
                FontFamily="Arial"
                FontSize="12" Click="SearchButton_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="MockTestDataGrid"
              Grid.Row="1"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              SelectionMode="Single"
              FontFamily="Tahoma"
              FontSize="13"
              Background="White"
              RowBackground="WhiteSmoke"
              AlternatingRowBackground="#FFF5F5DC">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding TestId}" Width="50"/>
                <DataGridTextColumn Header="Title" Binding="{Binding TestTitle}" Width="*"/>
                <DataGridTextColumn Header="SkillArea" Binding="{Binding SkillArea}" Width="*"/>
                <DataGridTextColumn Header="StartTime" Binding="{Binding StartTime}" Width="*"/>
                <DataGridTextColumn Header="EndTime" Binding="{Binding EndTime}" Width="*"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="*"/>
                <DataGridTextColumn Header="CandidateId" Binding="{Binding CandidateId}" Width="*"/>
                <DataGridTextColumn Header="FullName" Binding="{Binding Candidate.FullName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
