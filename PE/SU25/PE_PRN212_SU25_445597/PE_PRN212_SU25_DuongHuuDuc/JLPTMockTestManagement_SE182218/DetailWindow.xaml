<Window x:Class="JLPTMockTestManagement_SE182218.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JLPTMockTestManagement_SE182218"
        mc:Ignorable="d"
        Title="Detail Mock Test" Height="400" Width="500"
        FontFamily="Arial" FontSize="13" Background="#FFBAE6FD" 
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Top" Margin="0,0,0,20">
            <!-- MockTestId -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Test ID:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="TestIdTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- TestTitle -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Test Title:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="TestTitleTextBox" Width="280" Height="20" Background="#FFFFF8EB" />
            </StackPanel>

            <!-- SkillArea -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Skill Area:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="SkillAreaTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- Score -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Score:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="ScoreTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- StartTime -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Start Time:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="StartTimeTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- EndTime -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="End Time:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="EndTimeTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- Candidate -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Fullname:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <ComboBox x:Name="CandidateComboBox"
                Width="280"
                Height="22"
                Background="#FFFFF8EB"
                DisplayMemberPath="FullName" ></ComboBox>
            </StackPanel>


        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Save" Width="80" Margin="0,0,10,0" Padding="5"
                 Background="#FF06B6D4" Foreground="White" FontFamily="Arial" FontSize="12"
                 Click="SaveButton_Click"/>
            <Button Content="Close" Width="80" Padding="5"
                 Background="#FF06B6D4" Foreground="White" FontFamily="Arial" FontSize="12"
                 Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
