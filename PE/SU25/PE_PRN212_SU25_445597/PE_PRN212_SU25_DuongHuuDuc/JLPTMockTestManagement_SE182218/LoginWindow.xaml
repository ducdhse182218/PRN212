<Window x:Class="JLPTMockTestManagement_SE182218.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JLPTMockTestManagement_SE182218"
        mc:Ignorable="d"
        Title="Login Window - SU 2025" Height="400" Width="700" 
        FontFamily="Arial" FontSize="24" Background="#FFBAE6FD" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Padding="50" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="500" VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Username Row -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Label Content="Email:"
                       Width="120"
                       FontFamily="Arial"
                       FontSize="26"
                       Foreground="#FF1E3A8A"
                       VerticalAlignment="Center"/>
                    <TextBox x:Name="EmailTextBox" Width="250"
                         Height="34"
                         FontSize="18"
                         Background="#FFF0F9FF"/>
                </StackPanel>

                <!-- Password Row -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Label Content="Password:"
                       Width="120"
                       FontFamily="Arial"
                       FontSize="26"
                       Foreground="#FF1E3A8A"
                       VerticalAlignment="Center"/>
                    <TextBox x:Name="PasswordTextBox" Width="250"
                             Height="32"
                             FontSize="18"
                             Background="#FFF0F9FF"/>
                </StackPanel>

                <!-- Login Button -->
                <Button x:Name="btnLogin" Content="Login"
                    Width="150"
                    Padding="10"
                    Margin="0,20,0,0"
                    FontSize="20"
                    Background="#FF06B6D4"
                    Foreground="White"
                    HorizontalAlignment="Center" Click="btnLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
