<Window x:Class="SamStore_SE182218.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamStore_SE182218"
        mc:Ignorable="d"
        Title="PE06062024 Login Window" Height="600" Width="800" 
        FontFamily="Arial" FontSize="13" Background="#EDD5D3" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Padding="50" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="500" VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Username Row -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Label Content="Email:"
                    Width="120"
                    FontFamily="Arial Narrow 12pt"
                    FontSize="26"
                    Foreground="#FF0000FF"
                    VerticalAlignment="Center"/>
                    <TextBox x:Name="EmailTextBox" Width="250"
                     Height="34"
                     FontSize="18"
                     Background="#FFF0F9FF" TextAlignment="Left"/>
                </StackPanel>

                <!-- Password Row -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Label Content="Password:"
                    Width="120"
                    FontFamily="Arial Narrow 12pt"
                    FontSize="26"
                    Foreground="#FF0000FF"
                    VerticalAlignment="Center"/>
                    <TextBox x:Name="PasswordTextBox" Width="250"
                         Height="32"
                         FontSize="18"
                         Background="#FFF0F9FF" TextAlignment="Left"/>
                </StackPanel>

                <!-- Login Button -->
                <Button x:Name="btnLogin" Content="Login"
                Width="150"
                Padding="10"
                Margin="0,20,0,0"
                FontSize="20"
                Background="#FF06B6D4"
                Foreground="White"
                HorizontalAlignment="Center" Click="btnLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
