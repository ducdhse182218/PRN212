<Window x:Class="GermanyEuro2024_SE182218.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GermanyEuro2024_SE182218"
        mc:Ignorable="d"
        Title="Detail FootballTeam Window" Height="450" Width="600"
        FontFamily="Tahoma" FontSize="13" Background="#FFF2F184" 
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Top" Margin="0,0,0,20">
            <!-- PlayerId -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="PlayerId:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="PlayerIdTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- PlayerName -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="PlayerName:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="PlayerNameTextBox" Width="280" Height="20" Background="#FFFFF8EB" />
            </StackPanel>

            <!-- Achievements -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Achievements:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="AchievementsTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- Birthday -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Score:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <DatePicker x:Name="BirthdayDatePicker" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- OriginCountry -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="OriginCountry:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="OriginCountryTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- Award -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Award:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <TextBox x:Name="AwardTextBox" Width="280" Height="20" Background="#FFFFF8EB"/>
            </StackPanel>

            <!-- FootballTeam -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Fullname:" Width="140" FontFamily="Arial" FontSize="12" Foreground="#FF1E3A8A"/>
                <ComboBox x:Name="FootballTeamComboBox"
            Width="280"
            Height="22"
            Background="#FFFFF8EB"
            DisplayMemberPath="TeamTitle" ></ComboBox>
            </StackPanel>


        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="Save" Width="80" Margin="0,0,10,0" Padding="5"
             Background="Blue" Foreground="White" FontFamily="Arial" FontSize="12"
             Click="SaveButton_Click"/>
            <Button Content="Close" Width="80" Padding="5"
             Background="Blue" Foreground="White" FontFamily="Arial" FontSize="12"
             Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
