<Window x:Class="PlantNurseryManagement_SE182218.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantNurseryManagement_SE182218"
        mc:Ignorable="d"
        Title="Login Window - Spring 2025" Height="400" Width="700" 
        FontFamily="Arial" FontSize="25" Background="#FFD0E8D0" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Center" Foreground="#FF2E7D32" VerticalAlignment="Top" FontSize="23" Margin="0,27,0,0" FontFamily="Tahoma"/>
        <Label Content="Email: " HorizontalAlignment="Left" Foreground="#FF2E7D32" FontSize="23" Margin="97,91,0,-91"/>

        <TextBox x:Name="EmailAddressTextBox" HorizontalAlignment="Left" Height="30" Margin="231,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="16" Background="#FFECF9EC"/>

        <Label Content="Password: " Foreground="#FF2E7D32" FontSize="23" Margin="97,157,-97,-157"/>

        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="30" Margin="231,162,0,0" VerticalAlignment="Top" Width="300" FontSize="16" Background="#FFECF9EC"/>

        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="291,221,0,0" VerticalAlignment="Top" 
            RenderTransformOrigin="2.045,0.366" Height="45" Width="92" Click="LoginButton_Click" Padding="8" Background="#FF388E3C" Foreground="White"/>
    </Grid>
</Window>
